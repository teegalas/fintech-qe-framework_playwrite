{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@api/*": ["src/api/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/ui/pages/*"]
    }
  },
  "include": ["playwright.config.ts", "src", "tests"]
}
